                        <Insets left="5.0" top="5.0" />
                     </VBox.margin>
                  </ImageView>
                  <ImageView fx:id="chosen_weapon_image" fitHeight="191.0" fitWidth="274.0" pickOnBounds="true">
                     <VBox.margin>
                        <Insets bottom="5.0" left="5.0" />
